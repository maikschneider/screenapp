<!DOCTYPE html>
<html>
  <head>
    <title>Our Info Screen</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/styles/homepage.css">
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
  </head>

  <body>
    <div data-sticky-container>

      <div class="title-bar" data-responsive-toggle="main-menu" data-hide-for="medium">
        <button class="menu-icon" type="button" data-toggle="main-menu"></button>
        <div class="title-bar-title" data-toggle="main-menu">Menu</div>
      </div>

      <div id="main-menu" class="top-bar" data-sticky data-options="marginTop:0;" style="width:100%">
        <div class="row collapse">
          <div class="small-12 columns">
            <div class="top-bar-left">
              <ul class="dropdown menu vertical medium-horizontal" data-magellan>
                <% var hrefprefix = req.route.path == '/' ? '' : '/'; %>
                <li><a href="<%= hrefprefix %>#header"><i class="fa fa-home" aria-hidden="true"></i> Welcome</a></li>
                <li><a href="<%= hrefprefix %>#code"><i class="fa fa-code" aria-hidden="true"></i> Overview</a></li>
                <li><a href="<%= hrefprefix %>#services"><i class="fa fa-puzzle-piece" aria-hidden="true"></i> Services</a></li>
                <li><a href="<%= hrefprefix %>#api"><i class="fa fa-book" aria-hidden="true"></i> API</a></li>
                <li><a href="<%= hrefprefix %>#contact"><i class="fa fa-envelope" aria-hidden="true"></i> Contact</a></li>
              </ul>
            </div>
            <div class="top-bar-right">
              <ul class="menu  vertical medium-horizontal">
                <% if(req.session.me){ %>
                <li><a href="/logout"><i class="fa fa-key hide-for-medium" aria-hidden="true"></i> Logout</a></li>
                <li><a class="button hollow" href="/admin">Admin</a></li>
                <% } else {%>
                <li><a href="/signup"><i class="fa fa-key hide-for-medium" aria-hidden="true"></i> Register</a></li>
                <li><a class="button hollow" href="/login">Login</a></li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- body %>

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/foundation-sites/dist/foundation.min.js"></script>
    <script type="text/javascript">
      $(document)
        .foundation()
        .ready(function(){
          <% if(typeof emailsend != 'undefined'){ %>
            window.scrollTo(0,document.body.scrollHeight);
          <% } %>
        });
    </script>
  </body>
</html>
